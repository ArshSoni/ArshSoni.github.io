mixin meta(title, description)
  title #{title}
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(name='description', content=description)
  meta(name='author' content='Ryan Amparo')
  meta(http-equiv='content')

mixin getStylesheets
  +addStylesheet('styles/bootstrap.css')
  +addStylesheet('styles/style.css')
  +addStylesheet('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
  +addStylesheet('plugins/colorbox/colorbox.css')
  +addScript('https://code.jquery.com/jquery-3.1.1.min.js')
  //- +addScript('https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
  +addScript('plugins/colorbox/jquery.colorbox-min.js')

mixin addStylesheet(src)
  link(rel="stylesheet", href=src)

mixin addScript(src)
  script(src=src)

mixin getNavbar(selected)
  nav.navbar.navbar-custom
    input(id="dropdown" type="checkbox" class="inputDropdown sr-only")
    label(for="dropdown" class="navbar-toggle") 
      span

    div.collapse.navbar-collapse.navWrapper#myNavbar
      ul.nav.navbar-nav.site-nav.js-site-nav
        //- - var selected = selected
        //- - var menu = {'Blog': 'blog.html', 'Showreel': 'showreel.html', 'Shop': 'shop.html'}

        //- each link, name in menu
        //-   li
        //-     if selected == name
        //-       a.active(href=link)= name
        //-     else
        //-       if name == 'Showreel'
        //-       a(href=link)= name
        li
          a(href="blog.html") Blog
        
        li
          a.showreel(href="https://www.youtube.com/v/eUf_xfZBc8A?rel=0&amp;wmode=transparent&autoplay=1") Showreel
        
        li
          a(href="shop.html") Shop
            
            

        
