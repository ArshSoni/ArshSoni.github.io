mixin meta(title, description)
  title #{title}
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(charset="UTF-8")
  meta(name='description', content=description)
  meta(name='author' content='Ryan Amparo')
  meta(http-equiv='content')
  link(rel='icon' type='image/png' href='favicons/favicon-32x32.png', sizes='32x32')
  link(rel='icon' type='image/png' href='favicons/favicon-16x16.png' sizes='16x16')
  link(rel="apple-touch-icon", sizes="76x76", href="/apple-touch-icon.png")



mixin getStylesheets
  +addStylesheet('styles/bootstrap.css')
  +addStylesheet('styles/style.css')
  +addStylesheet('styles/main.css')
  +addStylesheet('plugins/magnific/magnific-popup.css')
  +addStylesheet('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
  +addStylesheet('https://fonts.googleapis.com/css?family=Tangerine')


mixin addStylesheet(src)
  link(rel="stylesheet", href=src)

mixin addScript(src)
  script(src=src)

mixin getNavbar(currentPage)
  nav.navbar.navbar--custom.js-navbar
    input(id="dropdown" type="checkbox" class="navbar__checkbox sr-only")
    label(for="dropdown" class="navbar__toggle")
      div.hamburger 
        span.hamburger__line
        span.hamburger__line
        span.hamburger__line

    a.spade(href="index.html")
      img.spade__image(src="images/spade.png")

    div.collapse.navbar-collapse.navbar__navWrapper
      ul.nav.navbar-nav.siteNav.js-site-nav
  

        - var page = currentPage
        - var showreelLink = 'https://www.youtube.com/watch?v=eUf_xfZBc8A'
        - var menu = {'Home': 'index.html', 'Showreel': showreelLink, 'Shop': 'shop.html', 'Contact': '#contactForm'}
    
        each link, name in menu
          li.siteNav__item
            if name == 'Showreel'
              a.showreel.siteNav__link(href=link)= name
                span.js-bottom-border.bottom-border
            else if name == 'Contact'
              a.bookNow.siteNav__link(href=link)= name
                span.js-bottom-border.bottom-border
            else if page == name
              a.active.siteNav__link(href=link)= name
                span.js-bottom-border.bottom-border
            else
              a.siteNav__link(href=link)= name
                span.js-bottom-border.bottom-border



