doctype
html.loading
	head
		+meta('MS', 'woo')
		+getStylesheets()
		

	body
		//- +getAnimation()
		div.wrap.fullsize-bg-image
			+getNavbar()

			div.details
				div.container
					div.row
						div.col-xs-12
							a(class="navbar-brand" href="#")
								+getLogo()
						
					div.bookNowWrappermain
						a(href="#contactForm" class="bookNowmain")
							img(src="http://magicsingh.com/v1/wp-content/themes/abracadabra/images/Booknowbutton.png")
							
					//- div.row
					//- 	div.col-xs-8.col-xs-push-2.col-md-6.col-md-push-3
