include includes/mixins

doctype
html
	head
		+meta('Magic Singh | Shop', 'woo')
		+getStylesheets()

	body
		div.wrap
			+getNavbar('Shop')

			div.shop
				div.shop-header

					div.shop-header-text.floating-text
						div.title-action
							div.card-overlay
								img(src="images/msplayingcards/MSCard_overlay.png")
						
							div.logo-name
								a(href="index.html")
									img(src="images/msplayingcards/MSLogo_brown.png" alt="Magic Singh" class="shop-card-logo" title="MagicSingh")
								h3.product-title Playing Cards

							form.buy-form(target='paypal', action='https://www.paypal.com/cgi-bin/webscr', method='post')
								input(type='hidden', name='cmd', value='_s-xclick')
								input(type='hidden', name='hosted_button_id', value='REX7497EJ48UE')
								table
									tbody
										tr
											td.quantity
												input(type='hidden', name='on0', value='Quantity and Shipping')
												| Quantity and Shipping
										tr
											td
												select#quantity(name='os0')
													option(value='1 Deck') 1 Deck (U.K. Only) £12.00 GBP 
													option(value='2 Decks') 2 Decks (U.K. Only) £24.00 GBP
													option(value='4 Decks') 4 Decks (U.K. Only) £47.00 GBP
													option(value='8 Decks') 8 Decks (U.K. Only) £96.00 GBP
													option(value='12 Decks') 12 Decks (U.K. Only) £145.00 GBP
													option(value='1 Deck International') 1 Deck (International) £21.00 GBP
													option(value='2 Decks International') 2 Decks (International) £34.00 GBP
													option(value='4 Decks International') 4 Decks (International) £60.00 GBP
													option(value='8 Decks International') 8 Decks (International) £114.00 GBP
													option(value='12 Decks International') 12 Decks (International) £164.00 GBP
								p
									| Addresses outside U.K. must select 
									br
									|  from International options.
								p(style='text-decoration:underline;') Postage will be added upon checking out
								input(type='hidden', name='currency_code', value='GBP')
								input#purchase(type='submit', value='purchase', name='submit', alt='PayPal – The safer, easier way to pay online.')
							
							div.help
								h3.bottom-arrow ↓
								p If you have any questions, please get in touch at #[a(href="mailto:order@magicsingh.com") order@magicsingh.com]
					video(class="msPlayingCardVideo" autoplay loop muted)
						source(src="images/msplayingcards/ShopVideoMP4.mp4" type="video/mp4")
					
					div.arrowBounceWrapper
						a(href="#shop-content-start").arrow.arrow-bounce.js-arrow-bounce
						

				section.shop-content#shop-content-start
					section.text-callouts
						p
							strong Magic Singh's Custom branded playing Cards
						| The first of their kind, the world renowed U.S. Playing Card company has manufactured these beautiful, intricately designed playing cards, highlighting regal Indian hertiage and identity.
					
					section.mscard-sample
						img(src='images/msplayingcards/MSCard_001.jpg', alt='0000 MSCARDS01')
						img(src='images/msplayingcards/MSCard_002.jpg', alt='0001 MSCARDS02')
						img(src='images/msplayingcards/MSCard_003.jpg', alt='0002 MSCARDS03')
						img(src='images/msplayingcards/MSCard_004.jpg', alt='0003 MSCARDS04')
						img(src='images/msplayingcards/MSCard_005.jpg', alt='0004 MSCARDS05')
						img(src='images/msplayingcards/MSCard_006.jpg', alt='0005 MSCARDS06')
						img(src='images/msplayingcards/MSCard_007.jpg', alt='0007 MSCARDS07')

					section.text-callouts.shop-signoff
						p
							strong Only available through MagicSingh.com
					
			div.push
		footer.shop-footer
			+getFooter()

		+getContactForm()

		+addScript('https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js')
		+addScript('plugins/magnific/jquery.magnific-popup.js')
		+addScript('scripts/main.js')
		script.
			$(document).ready(function() {



				
				$('.showreel').magnificPopup({
					type:'iframe', 

					callbacks: {
						open: function() {
							$('.showreel').addClass('active');

							$.magnificPopup.instance.close = function() {
								$.magnificPopup.proto.close.call(this);
								$('.showreel').removeClass('active');
							}
						}
					}, 

					mainClass:'mfp-fade',
					removalDelay: 300, 
					preloader: false, 
					fixedcontentPos: false, 
					enableEscapeKey: true

					
				});


				$(window).resize(function() {

					if (window.innerWidth < 500) {
						bookNow[0].setAttribute('href', 'mailto:contact@magicsingh.com');
						bookNow[1].setAttribute('href', 'mailto:contact@magicsingh.com');
						
					} else {
						bookNow[0].setAttribute('href', '#contactForm');
						bookNow[1].setAttribute('href', '#contactForm');
					}
				});

				var bookNow = document.querySelectorAll('.bookNow');
