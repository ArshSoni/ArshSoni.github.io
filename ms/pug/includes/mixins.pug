mixin getNavbar(currentPage)
  nav.navbar.navbar-custom.js-navbar
    input(id="dropdown" type="checkbox" class="inputDropdown sr-only")
    label(for="dropdown" class="navbar-toggle")
      div.hamburgerWrap 
        span
        span
        span

    img.spade.grayscale(src="images/spade.png")

    div.collapse.navbar-collapse.navWrapper
      ul.nav.navbar-nav.site-nav.js-site-nav
  

        - var page = currentPage
        - var showreelLink = 'https://www.youtube.com/watch?v=eUf_xfZBc8A'
        - var menu = {'Home': 'index.html', 'Showreel': showreelLink, 'Shop': 'shop.html', 'Contact': '#contactForm'}
    
        each link, name in menu
          li
            if name == 'Showreel'
              a.showreel(href=link)= name
                span.js-bottom-border.bottom-border
            else if name == 'Contact'
              a.bookNow(href=link)= name
                span.js-bottom-border.bottom-border
            else if page == name
              a.active(href=link)= name
                span.js-bottom-border.bottom-border
            else
              a(href=link)= name
                span.js-bottom-border.bottom-border



