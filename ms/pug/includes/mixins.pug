mixin meta(title, description)
  title #{title}
  meta(name='viewport' content='width=device-width, initial-scale=1')
  meta(charset="UTF-8")
  meta(name='description', content=description)
  meta(name='author' content='Ryan Amparo')
  meta(http-equiv='content')

